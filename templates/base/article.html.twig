{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1><a href="{{ path('article_detail',{'slug':article.slug}) }}">{{ article.title }}</a> </h1>
        <p>
            <a href="{{ path('author_detail',{'slug':article.user.slug}) }}">{{ article.user.name }}</a>
        </p>
        <p>{{ article.body }}</p>

        <div id="articles">
            <h2>{{ 'article.anotherArticles' | trans }} {{ article.user.name }}</h2>
            {% for anotherArticle in article.user.articles %}
                <div class="example-wrapper" id="{{ anotherArticle.slug}}">
                    <h3><a href="{{ path('article_detail',{'slug':anotherArticle.slug}) }}">{{ anotherArticle.title }}</a> </h3>
                    <p>{{ anotherArticle.body }}</p>
                </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}
