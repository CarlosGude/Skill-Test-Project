{% extends 'base.html.twig' %}

{% block title %}{{ 'home.welcome' | trans }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ 'home.welcome' | trans }}</h1>

    <div id="articles">
        {% for article in articles %}
            <div id="{{ article.slug }}">
                <h2><a href="{{ path('article_detail',{'slug':article.slug}) }}">{{ article.title }}</a> </h2>
                <p>
                    <a href="{{ path('author_detail',{'slug':article.user.slug}) }}">{{ article.user.name }}</a>
                </p>
                <p>{{ article.body }}</p>
            </div>
        {% endfor %}
    </div>

</div>
{% endblock %}
